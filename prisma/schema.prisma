generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Team {
  leagueName String 
  id Int @id @default(autoincrement())
  name String @unique
  points Int @default(0)
  position Int 
  matchesPlayeds Int @default(0)
  matchesWon Int @default(0)
  matchesDrawn Int @default(0)
  matchesLost Int @default(0)
  goalsFor Int @default(0)
  goalsAgainst Int @default(0)
  goalDifference Int @default(0)
  MatchesFor Match[] @relation("teamMatches")
  MatchsAgainst Match[] @relation("matchesAgainst")

  @@map("teams")
}
model Match {
  id Int @id @default(autoincrement())
  teamName String
  adversaryName String
  inGame Boolean @default(true)
  goalsFor Int @default(0)
  goalsAgainst Int @default(0)
  createdAt DateTime @default(now())
  Team Team @relation("teamMatches", fields: [teamName], references: [name])
  Adversary Team @relation("matchesAgainst",fields:[adversaryName], references: [name])
 
}